.main-header
    background: rgba(30,30,30,0.9)
    width: 100%
    height: 50px
    line-height: 50px
    position: absolute
    top: 0
    font-size: 16px
    z-index: 2
    -webkit-user-select: none

    .logo
        position: absolute
        width: calc(100% - 160px)
        margin: auto
        height: 100%
        line-height: 50px
        top: 0
        left: 0
        right: 0
        z-index: 1
        color: $color-white
        -webkit-app-region: drag
        background: url("../images/header/logo.png") no-repeat
        background-size: 90px
        background-position: center 15px

    .settings
        height: 100%
        line-height: 50px
        font-size: 18px
        position: absolute
        top: 0
        right: 15px
        z-index: 2

    .os-buttons
        display: block
        width: 65px
        height: 100%
        z-index: 2
        position: absolute
        top: 0
        left: 15px

        .button
            display: inline-block
            width: 13px
            height: 13px
            background-size: contain
            margin-right: 8px

            &.cls
                background-image: url("../images/header/close-normal.svg")
                &:active
                    background-image: url("../images/header/close-press.svg")
            &.min
                background-image: url("../images/header/min-normal.svg")
                &:active
                    background-image: url("../images/header/min-press.svg")
            &.max
                background-image: url("../images/header/max-normal.svg")
                &:active
                    background-image: url("../images/header/max-press.svg")

        &:hover
            .cls
                background-image: url("../images/header/close-hover.svg")
            .min
                background-image: url("../images/header/min-hover.svg")
            .max
                background-image: url("../images/header/max-hover.svg")

        &.nofocus
            .cls
                background-image: url("../images/header/close-nofocus.svg")
            .min
                background-image: url("../images/header/min-nofocus.svg")
            .max
                background-image: url("../images/header/max-nofocus.svg")

    &.windows

        .settings
            right: auto
            left: 15px

        .os-buttons
            left: auto
            right: 10px
            height: 16px

            .cls,.min,.max
                display: block
                float: left
                padding: 0
                margin: 0
                width: 20px
                height: 16px
                background-image: url("../images/header/buttons-windows.png")
                background-size: 160px 16px

                &:active
                    background-image: url("../images/header/buttons-windows.png")

            &.nofocus
                .cls, .min, .max
                    background-image: url("../images/header/buttons-windows.png")

                .cls
                    background-position: -40px 0

            .cls
                background-position: -100px 0
                &:hover
                    background-position: -100px 0

            .min
                background-position: 0 0
                &:hover
                    background-position: -60px 0

            .max
                background-position: -20px 0
                &:hover
                    background-position: -80px
