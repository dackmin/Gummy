// RESET
body
    background: $color-charade
    color: $color-white
    font-family: "Source Sans Pro", Helvetica, sans-serif
    font-size: 14px
    font-style: normal
    font-weight: 300
    overflow: hidden
    position: relative


.main-container
    width: 100%
    height: 100vh
    position: absolute
    z-index: 1
    overflow-x hidden
    overflow-y: overlay
    -webkit-overflow-scrolling touch

    &::-webkit-scrollbar-track
        margin-top: 50px


.main-grid
    padding-top: 50px
    display: flex
    justify-content: center
    flex-flow: row wrap
