// RESET
body
    background: $color-charade
    color: $color-white
    font: 14px Helvetica, Arial, sans-serif
    overflow: hidden
    position: relative

.main-container
    width: 100%
    height: 100vh
    position: absolute
    z-index: 1
    overflow-x hidden
    overflow-y: overlay
    -webkit-overflow-scrolling touch

    &::-webkit-scrollbar
        width 6px

    &::-webkit-scrollbar-track
        background-color transparent

    &::-webkit-scrollbar-thumb
        background-color $color-shakespear

    &::-webkit-resizer,
    &::-webkit-scrollbar-corner,
    &::-webkit-scrollbar-button,
    &::-webkit-scrollbar-track-piece
        display none

    &::-webkit-scrollbar-track
        margin-top: 50px

.main-grid
    padding-top: 50px
    display: flex
    flex-justify: flexbox-start
    flex-flow: row wrap
